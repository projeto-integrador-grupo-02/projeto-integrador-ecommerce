<!DOCTYPE html>
<html lang="en">
    <head>
        <script src="/js/admin-products.js" defer></script>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/admin.css">
        <link rel="stylesheet" href="/css/main-css.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
            integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/4917086014.js" crossorigin="anonymous"></script>
        <title>Administração</title>
    </head>

    <body>
        
        <%- include('partials/menu-admin.ejs')%>

            <div class="container-products">
                <h2 class="title">Controle de categorias</h2>
                <input type="search" class="busca" placeholder="Buscar categoria" oninput="search()">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Categorias</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const categoria of categorias) { %>
                            <tr>
                                <li>
                                    <td>
                                        <%= categoria?.name %>
                                    </td>
                                </li>
                                <li>
                                    <td>
                                        <a href="/admin/products/categorias/<%= categoria.id %>/edit">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a href="/admin/products/categorias/<%= categoria.id %>/delete">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </li>
                                <% } %>
                            </tr>
                    </tbody>
                </table>
                <a href="/admin/products/create">
                    <button type="button" class="btn">
                        Cadastrar Categoria
                    </button>
                </a>
                    
                <%- include('partials/paginacao.ejs')%>
                
            </div>
            <%- include('partials/script-admin.ejs')%>
    </body>

</html>